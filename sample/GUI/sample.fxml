<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.GUI.Controller">
   <HBox prefHeight="18.0" prefWidth="600.0">
      <TextField fx:id="firstSquad" onMouseClicked="#makeFirstSquadFieldBetter" promptText="Первый отряд">
         <HBox.margin>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </HBox.margin></TextField>
      <TextField fx:id="secondSquad" onMouseClicked="#makeSecondSquadFieldBetter" promptText="Второй отряд">
         <HBox.margin>
            <Insets bottom="3.0" right="3.0" top="3.0" />
         </HBox.margin></TextField>
      <Button mnemonicParsing="false" onAction="#makeThisShitWorks" text="Старт">
         <HBox.margin>
            <Insets bottom="3.0" top="3.0" />
         </HBox.margin></Button>
   </HBox>
   <HBox prefHeight="102.0" prefWidth="600.0">
      <VBox prefHeight="108.0" prefWidth="232.0">
         <ChoiceBox fx:id="raceChoiceBox" onAction="#getUnitInfo" prefWidth="150.0">
            <VBox.margin>
               <Insets bottom="3.0" left="3.0" />
            </VBox.margin></ChoiceBox>
         <ChoiceBox fx:id="classChoiceBox" onAction="#getUnitInfo" prefWidth="150.0">
            <VBox.margin>
               <Insets bottom="3.0" left="3.0" />
            </VBox.margin></ChoiceBox>
         <Button mnemonicParsing="false" onAction="#addToFirstSquad" text="Добавить в первый отряд">
            <VBox.margin>
               <Insets bottom="3.0" left="3.0" />
            </VBox.margin></Button>
         <Button mnemonicParsing="false" onAction="#addToSecondSquad" text="Добавить во второй отряд">
            <VBox.margin>
               <Insets left="3.0" />
            </VBox.margin></Button>
      </VBox>
      <TextArea fx:id="unitCardArea" editable="false" nodeOrientation="LEFT_TO_RIGHT" prefColumnCount="2" prefRowCount="5" promptText="Информация о выбранном юните" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="3.0" right="3.0" />
         </HBox.margin></TextArea>
   </HBox>
   <TextArea fx:id="outputWindow" editable="false" prefHeight="200.0" prefWidth="200.0" promptText="Ждем начала битвы..." VBox.vgrow="ALWAYS">
      <VBox.margin>
         <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </VBox.margin></TextArea>
</VBox>
